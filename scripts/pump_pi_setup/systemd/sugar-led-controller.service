[Unit]
Description=Sugar House LED Status Controller
After=network.target sugar-pump-controller.service
Wants=sugar-pump-controller.service

[Service]
Type=simple
User=__USER__
WorkingDirectory=__REPO_ROOT__
Environment=PYTHONUNBUFFERED=1
Environment=SUGAR_CONFIG_DIR=__REPO_ROOT__/config
ExecStart=__VENV_PATH__/bin/python __REPO_ROOT__/scripts/led_controller.py
Restart=always
RestartSec=5
StandardOutput=append:__LOG_PATH__
StandardError=append:__LOG_PATH__

[Install]
WantedBy=multi-user.target
