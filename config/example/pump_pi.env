# Example Pump Pi env file
# Copy to ../pump_pi.env on the pump controller Pi.

ROLE=pump_pi
API_BASE_URL=https://example.com/sugar_house_monitor/api
API_KEY=REPLACE_ME_WITH_GENERATED_KEY
DB_PATH=../data/pump_pi.db
UPLOAD_BATCH_SIZE=1
UPLOAD_INTERVAL_SECONDS=60
HANDSHAKE_INTERVAL_SECONDS=150
# GPIO + MCP3008
PUMP_CONTROL_PIN=17
ADC_REFERENCE_VOLTAGE=5
ADC_BOOL_THRESHOLD_V=1.0
# State machine / safety
ERROR_THRESHOLD=30
LOOP_DELAY=1
# Vacuum sampling
VACUUM_REFRESH_RATE=10
VACUUM_CAL_PATH=scripts/vacuum_cal.csv
VACUUM_UPLOAD_BATCH_SIZE=8
VACUUM_UPLOAD_INTERVAL_SECONDS=30
# Error upload
ERROR_UPLOAD_BATCH_SIZE=8
ERROR_UPLOAD_INTERVAL_SECONDS=30
