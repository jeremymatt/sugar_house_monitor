# Example O2 Pi env file
# Copy to ../oh_two_pi.env on the O2 monitor Pi.

ROLE=oh_two_pi
API_BASE_URL=https://example.com/sugar_house_monitor/api
API_KEY=REPLACE_ME_WITH_GENERATED_KEY
DB_PATH=data/oh_two_pi.db
# Sampling cadence
SAMPLE_INTERVAL_SECONDS=5
DEBOUNCE_SAMPLES=8
DEBOUNCE_SAMPLE_DELAY=0.05
# Upload cadence
UPLOAD_BATCH_SIZE=10
UPLOAD_INTERVAL_SECONDS=5
HANDSHAKE_INTERVAL_SECONDS=60
# Disk usage reporting for storage warning card
DISK_USAGE_PATH=~
# Optional cadence (seconds) for storage updates (defaults to 300)
# STORAGE_HEARTBEAT_SECONDS=300
# Hardware settings
ADC_REFERENCE_VOLTAGE=5
CALIBRATION_PATH=scripts/oh_two_cal.csv
LED_PIN=23
