# Example server env file
# Copy to ../server.env and customize paths per host.

ROLE=server
API_KEY=REPLACE_ME_WITH_GENERATED_KEY
TANK_DB_PATH=../data/tank_server.db
PUMP_DB_PATH=../data/pump_server.db
VACUUM_DB_PATH=../data/vacuum_server.db
STACK_TEMP_DB_PATH=../data/stack_temp.db
O2_DB_PATH=../data/o2_server.db
DB_RETENTION_DAYS=365
DB_RETENTION_CHECK_TIME=1       # days between retention passes on the server
STATUS_JSON_PATH=../web/data/status.json
EXPORT_DIR=../data/exports
LOG_DIR=../data/logs
EVAPORATOR_DB_PATH=../data/evaporator.db
TANK_CAPACITY_BROOKSIDE=300.0
TANK_CAPACITY_ROADSIDE=300.0
TIMEZONE=UTC
# Disk usage path for server storage status (defaults to repo root if unset)
DISK_USAGE_PATH=.
# O2 display averaging window (minutes)
NUM_MINS_TO_AVERAGE=10
# Window (seconds) of recent raw gallons for display median (default 66s if unset)
DISPLAY_VOLUME_WINDOW_SECONDS=66
# Max bins for history plots (server web UI default).
NUM_PLOT_BINS=2000
